<h1>レシピ新規投稿</h1>
  <%= form_with model: @recipe, url: '/recipes', method: :post, local:true do |f| %>
    <h4>写真</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>料理名</h4>
      <%= f.text_field :title %>
    <h4>材料</h4>
      <%= f.fields_for :recipe_ingredients do |t| %>
        <%= render "recipes/ingredient_fields", f: t %>
      <% end %>
    <%= f.submit '投稿' %>
  <% end %>